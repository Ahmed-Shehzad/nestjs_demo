# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,js,mts,cts,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 120
quote_type = single

# JSON files
[*.json]
indent_style = space
indent_size = 2
max_line_length = 120

# YAML files (for docker-compose, CI/CD, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

# Prisma schema files
[*.prisma]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Configuration files that might use different indentation
[{.eslintrc,tsconfig*.json,nest-cli.json}]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2
max_line_length = 200

# Docker files
[{Dockerfile,docker-compose*.yml,docker-compose*.yaml}]
indent_style = space
indent_size = 2

# GitHub workflows and configs
[.github/**/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile (tabs required)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2
max_line_length = 120

# XML files
[*.xml]
indent_style = space
indent_size = 2
