{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "strict": true,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@/mediator/*": ["./src/lib/mediator/*"],
      "@/fluent-validation/*": ["./src/lib/fluent-validation/*"],
      "@/fluent-results/*": ["./src/lib/fluent-results/*"],
      "@/hateoas/*": ["./src/lib/hateoas/*"],
      "@/problem-details/*": ["./src/lib/problem-details/*"],
      "@/openapi/*": ["./src/lib/openapi/*"],
      "@/features/*": ["./src/features/*"],
      "@/config/*": ["./src/config/*"]
    }
  }
}
